<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Payment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/view5"
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnbackkk"
                android:layout_width="65dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_back" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="363dp"
                android:layout_height="51dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:text="Thanh toán"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold"
                />

            <View
                android:id="@+id/view6"
                android:layout_width="70dp"
                android:layout_height="1dp"
                android:layout_weight="1" />
        </LinearLayout>

        <View
            android:id="@+id/view7"
            android:layout_width="match_parent"
            android:layout_height="27dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:background="#CBE1F3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="238dp"
                    android:layout_height="31dp"
                    android:layout_marginLeft="13dp"
                    android:layout_weight="1"
                    android:text="Địa chỉ giao hàng"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnadd"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_weight="1"
                    android:text="Sửa" />
            </LinearLayout>

            <TextView
                android:id="@+id/addd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:text="Đường...Phường...TP...Tỉnh"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/shipfee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="13dp"
                    android:text="Phí vận chuyển: "
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/shipvou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Chọn voucher"
                    android:textSize="14sp"
                    android:textStyle="italic"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="150dp"
                    android:layout_marginBottom="10dp"/>

            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/view9"
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Danh sách sản phẩm"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="13dp"
            android:layout_marginBottom="13dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ttpros"
            android:layout_width="match_parent"
            android:layout_height="272dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp" />

        <TextView
            android:id="@+id/totalp"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:text="Tổng giá trị sản phẩm: "
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="13dp"/>

        <TextView
            android:id="@+id/totalord"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:text="Tổng hóa đơn: "
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#CBE1F3"
            android:orientation="vertical"
            android:layout_marginRight="13dp"
            android:layout_marginLeft="13dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="238dp"
                    android:layout_height="31dp"
                    android:layout_marginLeft="13dp"
                    android:layout_weight="1"
                    android:text="Phương thức thanh toán"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:ignore="DuplicateIds" />

                <Button
                    android:id="@+id/btnwaypay"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_weight="1"
                    android:text="Sửa"
                    tools:ignore="DuplicateIds" />
            </LinearLayout>

            <TextView
                android:id="@+id/payway"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:text="Chuyển tiền ngân hàng"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnpay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thanh toán"
            android:layout_marginRight="13dp"
            android:layout_marginLeft="13dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>