<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".Fragments.AdminProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
            android:id="@+id/imageView5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/logo" />

    <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="H-JEWELRY"
            android:layout_marginTop="20dp"
            android:textSize="25dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center_horizontal"/>
    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="80dp"
                android:gravity="center">

            <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:padding="15dp"
                    android:src="@drawable/default_avatar"
                    android:scaleType="centerCrop"/>

            <Button
                    android:id="@+id/account_button"
                    android:text="Tài khoản và bảo mật"
                    android:textSize="15sp"
                    style="@style/UserButtonStyle"/>
            <Button
                    android:id="@+id/revenue_button"
                    android:text="Doanh Thu"
                    android:textSize="15sp"
                    style="@style/UserButtonStyle" />

            <Button
                    android:id="@+id/logistic_button"
                    android:text="Vận chuyển"
                    android:textSize="15sp"
                    style="@style/UserButtonStyle" />

            <Button
                    android:id="@+id/rate_button"
                    android:text="Đánh giá"
                    android:textSize="15sp"
                    style="@style/UserButtonStyle" />

            <Button
                    android:id="@+id/analysis_button"
                    android:text="Phân tích bán hàng"
                    android:textSize="15sp"
                    style="@style/UserButtonStyle" />

            <Button
                    android:id="@+id/customers_button"
                    android:text="Khách hàng"
                    android:textSize="15sp"
                    style="@style/UserButtonStyle" />

            <Button
                    android:id="@+id/store_button"
                    android:text="Thông tin cửa hàng"
                    android:textSize="15sp"
                    style="@style/UserButtonStyle" />
            <Button
                    android:id="@+id/SignOut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_horizontal"
                    android:text="Sign Out"/>

        </LinearLayout>
    </ScrollView>


</FrameLayout>