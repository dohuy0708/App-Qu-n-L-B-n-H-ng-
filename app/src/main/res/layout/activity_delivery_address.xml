<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="51dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/btn_comeback"
            android:background="@drawable/ic_back"
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:text="Địa chỉ giao hàng"
            android:layout_width="369dp"
            android:layout_height="37dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_marginTop="10dp"

            android:id="@+id/textView17"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:text="Liên hệ"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:background="@drawable/black_stroke"
            android:hint="Họ và tên"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:paddingLeft="8dp"
            android:paddingRight="30dp"
            android:singleLine="true"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.254"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:background="@drawable/black_stroke"
            android:hint="Số điện thoại"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:paddingLeft="8dp"
            android:paddingRight="30dp"
            android:singleLine="true"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.254"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Địa chỉ"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <Spinner
            android:id="@+id/spinner_province"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:background="@drawable/black_stroke"
            android:paddingRight="30dp"
            android:autofillHints="Tỉnh/Thành phố"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />
        <Spinner
            android:id="@+id/spinner_district"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:background="@drawable/black_stroke"
            android:autofillHints="Quận/Huyện"
            android:paddingRight="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />
        <Spinner
            android:id="@+id/spinner_ward"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:background="@drawable/black_stroke"
            android:autofillHints="Phường/Xã"
            android:paddingRight="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />
        <EditText
            android:id="@+id/street"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:background="@drawable/black_stroke"
            android:hint="Tên đường, Tòa nhà, Số nhà....."
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:paddingLeft="8dp"
            android:paddingRight="30dp"
            android:singleLine="true"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.254"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <EditText
            android:id="@+id/detail"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:background="@drawable/black_stroke"
            android:hint="Ghi chú cho shipper..."
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:paddingLeft="8dp"
            android:paddingRight="30dp"
            android:singleLine="true"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.254"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>




        <Button
            android:text="Hoàn thành"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_corner"
            android:layout_marginHorizontal="30dp"
            android:id="@+id/button6"/>
    </LinearLayout>

</LinearLayout>