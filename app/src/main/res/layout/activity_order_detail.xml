<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Payment">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btnbackkkdetail"
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_back" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="363dp"
                    android:layout_height="51dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Chi Tiết Đơn Hàng"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/view6"
                    android:layout_width="70dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <View
                android:id="@+id/view7"
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:background="@drawable/rounded_corner"

                android:orientation="vertical">


                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="238dp"
                    android:layout_height="31dp"
                    android:layout_marginLeft="13dp"
                    android:layout_weight="1"
                    android:text="Địa chỉ giao hàng"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/addd"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginLeft="13dp"
                    android:text="Chưa có địa chỉ giao hàng"
                    android:textColor="@color/black"

                    android:textSize="14sp"
                    android:textStyle="italic" />


            </LinearLayout>

            <View
                android:id="@+id/view9"
                android:layout_width="match_parent"
                android:layout_height="13dp" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginBottom="5dp"
                android:text="Danh sách sản phẩm"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rc_product_list"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textview22"
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginRight="1dp"
                    android:text="Mã sản phẩm:"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/masp"
                    android:layout_width="200dp"
                    android:layout_height="31dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginRight="13dp"
                    android:text="JGJJ6789"
                    android:textColor="#122693"
                    android:textSize="18sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textd2"
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="1dp"
                    android:text="Tình trạng:"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/statusdetail"
                    android:layout_width="200dp"
                    android:layout_height="31dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="13dp"
                    android:text="Đã nhận"
                    android:textColor="#122693"
                    android:textSize="18sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/ttong"
                    android:layout_width="wrap_content"
                    android:layout_height="31dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="1dp"
                    android:text="Tổng giá trị sản phẩm: "
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/totalsp"
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="13dp"
                    android:text="100000 "
                    android:textColor="#122693"
                    android:textSize="18sp"
                    android:textStyle="bold" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp">

                <TextView
                    android:id="@+id/discountview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="1dp"
                    android:text="Giảm voucher: "
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/discountvoucher"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="5dp"

                    android:layout_marginRight="1dp"
                    android:textColor="#122693"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>


            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="3dp"
                android:background="@color/black" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/totrd"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="1dp"
                    android:text="Tổng hóa đơn: "
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/totalord"
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:text="100000 "
                    android:textColor="#122693"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="13dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="228dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="13dp"
                        android:layout_weight="1"
                        android:text="Phương thức thanh toán:"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        tools:ignore="DuplicateIds" />

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="228dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="13dp"
                        android:layout_weight="1"
                        android:text="Thanh toán khi nhận hàng"
                        android:textColor="@color/black"
                        android:textSize="18sp"

                        tools:ignore="DuplicateIds" />


                </LinearLayout>


            </LinearLayout>

            <Button
                android:id="@+id/btnreview"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_corner"
                android:text="ĐÁNH GIÁ"
                android:textStyle="bold"
                android:visibility="gone"
                tools:ignore="ButtonStyle" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>