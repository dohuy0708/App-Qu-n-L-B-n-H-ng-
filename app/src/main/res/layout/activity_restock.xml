<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.RestockActivity" android:id="@+id/back_button">

    <TextView
            android:id="@+id/name"
            android:text="Tên: "
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="80dp"
            android:layout_marginStart="10dp"
            style="@style/RestockTextViewStyle"/>

    <TextView
            android:id="@+id/code"
            android:text="Mã:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            style="@style/RestockTextViewStyle"/>


    <TextView
            android:id="@+id/imagedesc"
            android:text="Ảnh mô tả:"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/code"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            style="@style/RestockTextViewStyle"/>


    <TextView
            android:id="@+id/description"
            android:text="Mô tả:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/addimg_button1"
            android:layout_marginStart="10dp"
            style="@style/RestockTextViewStyle"/>


    <TextView
            android:id="@+id/pricein"
            android:text="Giá nhập:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/editTextPricein"
            android:layout_marginStart="10dp"
            style="@style/RestockTextViewStyle"/>

    <TextView
            android:id="@+id/priceout"
            android:text="Giá bán:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/editTextPriceout"
            android:layout_marginStart="10dp"
            style="@style/RestockTextViewStyle"/>

    <TextView
            android:id="@+id/supplier"
            android:text="Nhà cung cấp:"
            app:layout_constraintTop_toTopOf="@id/editTextSuplier"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            style="@style/RestockTextViewStyle"/>

    <TextView
            android:id="@+id/unit"
            android:text="Đơn vị tính:"
            app:layout_constraintTop_toTopOf="@id/editTextUnit"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            style="@style/RestockTextViewStyle"/>


    <TextView
            android:id="@+id/entry"
            android:text="Ngày nhập:"
            app:layout_constraintTop_toTopOf="@id/editTextDateIn"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            style="@style/RestockTextViewStyle"/>


    <TextView
            android:id="@+id/total"
            android:text="Số lượng:"
            app:layout_constraintTop_toTopOf="@id/editTextQuantity"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            style="@style/RestockTextViewStyle"/>

    <ImageButton
            android:id="@+id/addimg_button1"
            style="@style/AddImageButtonStyle"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@+id/imagedesc"
            app:layout_constraintTop_toBottomOf="@id/editTextCode"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.296"
            android:backgroundTint="#837A7A" android:contentDescription="@string/app_name"/>

    <ImageButton
            android:id="@+id/addimg_button2"
            style="@style/AddImageButtonStyle"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@+id/addimg_button1"
            app:layout_constraintTop_toBottomOf="@id/editTextCode"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:contentDescription="@string/hello_blank_fragment"/>

    <ImageButton
            android:id="@+id/addimg_button3"
            style="@style/AddImageButtonStyle"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@+id/addimg_button2"
            app:layout_constraintTop_toBottomOf="@id/editTextCode"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:contentDescription="@string/hello_blank_fragment"/>


    <EditText
            android:id="@+id/editTextName"
            android:hint="Nhập Tên"
            app:layout_constraintStart_toEndOf="@+id/name"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="80dp"
            style="@style/RestockEditTextStyle" android:layout_height="48dp"/>
    <EditText
            android:id="@+id/editTextCode"
            android:hint="Nhập code"
            android:layout_marginStart="72dp" app:layout_constraintStart_toEndOf="@+id/name"
            app:layout_constraintTop_toBottomOf="@id/editTextName"
            android:layout_marginTop="10dp"

            style="@style/RestockEditTextStyle" android:layout_height="48dp"/>
    <EditText
            android:id="@+id/editTextDescrip"
            android:hint="Mô tả"
            android:layout_marginStart="72dp"
            app:layout_constraintStart_toEndOf="@+id/name"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/addimg_button1"
            style="@style/RestockEditTextStyle" android:layout_height="48dp"/>

    <EditText
            android:id="@+id/editTextPricein"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:hint="Giá nhập"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/editTextDescrip"
            android:layout_marginStart="72dp"
            app:layout_constraintStart_toEndOf="@+id/name"

            style="@style/RestockEditTextStyle"/>
    <EditText
            android:id="@+id/editTextPriceout"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:hint="Giá Bán"
            android:layout_marginStart="72dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@+id/name"
            app:layout_constraintTop_toBottomOf="@id/editTextPricein"
            style="@style/RestockEditTextStyle"/>
    <EditText
            android:id="@+id/editTextSuplier"
            android:hint="Tên nhà cung cấp"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_marginStart="72dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@+id/name"
            app:layout_constraintTop_toBottomOf="@id/editTextPriceout"

            style="@style/RestockEditTextStyle"/>
    <EditText
            android:id="@+id/editTextUnit"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:hint="Cái"
            android:layout_marginStart="72dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@+id/name"
            app:layout_constraintTop_toBottomOf="@id/editTextSuplier"
            style="@style/RestockEditTextStyle"/>
    <EditText
            android:id="@+id/editTextDateIn"
            android:hint="Ngày"
            android:layout_marginStart="72dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@+id/name"
            app:layout_constraintTop_toBottomOf="@id/editTextUnit"
            style="@style/RestockEditTextStyle" android:layout_height="48dp"/>

    <EditText
            android:id="@+id/editTextQuantity"
            android:hint="Số lượng"
            android:layout_marginStart="72dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@+id/name"
            app:layout_constraintTop_toBottomOf="@id/editTextDateIn"
            style="@style/RestockEditTextStyle"/>


    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_menu_revert"
            android:id="@+id/imageButton"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/hello_blank_fragment"/>

</androidx.constraintlayout.widget.ConstraintLayout>