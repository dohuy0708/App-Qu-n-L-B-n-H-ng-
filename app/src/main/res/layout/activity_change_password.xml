<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingHorizontal="18dp"
              android:paddingTop="35dp"
              tools:context=".Activities.ChangePasswordActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/imageview_back_changePassword"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:padding="6dp"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_back" />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="14dp"
                android:text="CHANGE PASSWORD"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14sp" />

    </LinearLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="8dp">

        <TextView
                android:id="@+id/tv_container2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="MẬT KHẨU HIỆN TẠI"
                android:textColor="@color/black"
                android:textSize="14sp" />

        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/edittext_currentPassword_changePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_container2"
                app:passwordToggleEnabled="true"
                app:hintEnabled="false"
                app:errorEnabled="true"
        >

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="-15dp"
                    android:layout_marginTop="-10dp"
                    android:backgroundTint="@color/white"
                    android:inputType="textPassword"
                    android:textSize="14sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
                android:id="@+id/tv_container3"
                android:layout_below="@+id/edittext_currentPassword_changePassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="MẬT KHẨU MỚI"
                android:textColor="@color/black"
                android:textSize="14sp" />

        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/edittext_newPassword_changePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_container3"
                app:errorEnabled="true"
                app:hintEnabled="false"
                app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="-15dp"
                    android:layout_marginTop="-10dp"
                    android:backgroundTint="@color/white"
                    android:inputType="textPassword"
                    android:textSize="14sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
                android:id="@+id/tv_container4"
                android:layout_below="@+id/edittext_newPassword_changePassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="XÁC NHẬN MẬT KHẨU MỚI"
                android:textColor="@color/black"
                android:textSize="14sp" />

        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/edittext_confirmNewPassword_changePassword"
                android:layout_below="@+id/tv_container4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true"
                app:hintEnabled="false"
                app:errorEnabled="true"
        >

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="-15dp"
                    android:layout_marginTop="-10dp"
                    android:backgroundTint="@color/white"
                    android:inputType="textPassword"
                    android:textSize="14sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
                android:id="@+id/txt_success_change_pw"
                android:layout_below="@+id/edittext_newPassword_changePassword"
                android:layout_marginTop="85dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="15sp" />



        <com.google.android.material.button.MaterialButton
                android:id="@+id/button_save_changePassword"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="SAVE"
                android:textSize="14sp"
                app:cornerRadius="10dp" />
    </RelativeLayout>

</LinearLayout>